[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -S
    editor = vim
[user]
    name = Robbie Cao
    email = robbie.cao@gmail.com
[push]
    default = matching
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto
[color "branch"]
    current = green reverse
    local = yellow
    remote = red
[color "diff"]
    whitespace = red reverse
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    co = checkout
    br = branch -a -vv
    ci = commit -s -v
    ca = commit --amend -s
    cm = commit --amend -s -C HEAD
    cb = checkout -b
    st = status
    up = pull -v
    di = diff
    dt = difftool
    dc = difftool -y -x "colordiff"
    ds = difftool -y -x "sdiff"
    lo = log --graph --oneline
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%C(cyan)\\ [%cn]" --decorate --numstat
    ld = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%C(cyan)\\ [%cn]" --decorate=short --date=iso --graph
    ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%C(magenta)\\ [%cn]" --decorate --date=relative --graph
    last = log -3 HEAD
    unstage = reset HEAD --


[github]
    user = robbie-cao

[diff]
    tool = vimdiff
[difftool]
    prompt = false
[ghi]
	token = !security find-internet-password -a robbie-cao -s github.com -l 'ghi token' -w
