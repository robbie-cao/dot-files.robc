!## XDVI {{{1
XDvi.editor: vim -g --remote +%l %f
!XDvi.editor: vim -c ":RemoteOpen +%l %f"
XDvi.wwwBrowser: tpope browse
#if HEIGHT > 1024
XDvi.geometry: 746x900+50+0
#else
XDvi.geometry: 746x700+50+0
#endif
XDvi.shrinkFactor: 7
